{
  "manifest_version": 3,
  "name": "ClearView",
  "version": "1.0.0",
  "description": "Remove paywalls and view content freely",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "clearview@extension.local",
      "strict_min_version": "109.0"
    }
  }
}